    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
        },
        {
            "name": "Python Debugger: Day 1",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/day1/day1.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/day1"
        },
        {
            "name": "Python Debugger: Day 2",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/day2/day2.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/day2"
        }
    ]
}